<div class="row">
  <div class="col-sm-3">
    <div class="statcard statcard-primary p-a-md">
      <h3 class="statcard-number"><%= @user_amounts.first %></h3>
      <span class="statcard-desc">Starting Amount</span>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="statcard statcard-info p-a-md">
			<!-- Todo: refactor finding recent and best sets within nested arr of multiple inputs per day -->
      <h3 class="statcard-number"><%= @current_user.most_recent_set.amount %></h3>
      <span class="statcard-desc">Most Recent</span>
    </div>
  </div>
	<div class="col-sm-3">
		<div class="statcard statcard-success p-a-md">
			<h3 class="statcard-number">
				<%= @user_amounts.max %>
				<small class="delta-indicator delta-positive">
					<% unless @user_amounts.max.nil? %>
						<%= number_with_precision(((@user_amounts.max.to_f / @user_amounts.first)*100), precision: 2) %>%
					<% else %>
						<%= 'n/a' %>
					<% end %>
				</small>
			</h3>
			<span class="statcard-desc">Personal Best</span>
		</div>
	</div>
	<div class="col-sm-3">
		<div class="statcard statcard-danger p-a-md">
			<h3 class="statcard-number">
				<%= get_sum(@user_amounts) %>
			</h3>
			<span class="statcard-desc">Total Minutes</span>
		</div>
	</div>
</div>
<br>
